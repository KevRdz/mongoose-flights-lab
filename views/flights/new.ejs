<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include("../partials/nav") %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input">
    <label for="flightNo">Flight Number:</label>
    <input type="number" name="flightNo" id="flightNo">
    <label for="airport">Airport:</label>
    <select name="airport" id="airport">
      <option value="DEN">DEN</option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="departs-input">Departs:</label>
    <input type="date" name="departs" id="depart-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>